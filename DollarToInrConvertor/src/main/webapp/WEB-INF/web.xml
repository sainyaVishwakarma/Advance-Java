<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>DollarToInrConvertor</display-name>
  <welcome-file-list>
    <welcome-file>dollartors.html</welcome-file>
   
  </welcome-file-list>
  <servlet>
  <servlet-name>converter</servlet-name>
  <servlet-class>com.java.servlet.ConvertorServlet</servlet-class>
  <init-param>
  <param-name>rate</param-name>
  <param-value>82</param-value>
  </init-param>
  </servlet>
  
    <servlet-mapping>
  <servlet-name>converter</servlet-name>
  <url-pattern>/convert</url-pattern>
  </servlet-mapping>
</web-app>